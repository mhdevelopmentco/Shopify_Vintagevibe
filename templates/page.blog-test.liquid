{% capture image %}img-{{ page.handle }}.jpg{% endcapture %}
{% capture image2x %}img-{{ page.handle }}2x.jpg{% endcapture %}

<div class="promo-block alt user-page" style="padding-bottom: 0px; background-image: url({{ image | asset_url }}); background-attachment: fixed; background-size: auto 695px; background-position: 50% -3.3925px; background-repeat: no-repeat;">
  
  <span data-picture="" data-alt="{{ page.title | escape }}">
    <span data-src="{{ image | asset_url }}">
      <img alt="{{ page.title | escape }}" src="{{ image | asset_url }}" style="visibility: hidden;">
    </span>
  </span>
  
  <div class="page-title">
    <div class="holder">
      <div class="frame">
        <h1 class="title">{{ page.title }}</h1>
      </div>
    </div>
  </div>
  
</div>

<section class="text-section">
  <div class="section-holder">
    <div class="content-holder">
      {{page.content}}
    </div>
  </div>
</section>