{% form 'contact' %}

{% if form.posted_successfully? %}
<div class="successForm feedback">
  <p>Thanks for contacting us! We'll get back to you as soon as possible.</p>
</div>
{% endif %}

<div class="contact-form">
{% if form.errors %}
<div class="errorForm feedback">
  <!-- {{ form.errors.size }} or {{ form.errors | size }} -->
  <p>Oops, sorry. We were unable to submit your inquiry because it contained {{ form.errors | size | pluralize: 'an error', 'a few errors' }}. Please correct the following and submit again:</p>
  {% for field in form.errors %}
    <p>The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</p>
  {% endfor %}
</div>
{% endif %}
 
<div id="contactFormWrapper">
  <p>
    <label>Inquiry Type:</label>
    <select id="contactFormInquiryType" name="contact[inquiry type]">
      <option>Vintage Vibe Pianos</option>
      <option>Orders</option>
      <option>Website Issue</option>
      <option>Technical: General Electronics</option>
      <option>Technical: Wurlitzer Electronics</option>
      <option>Technical: Wurlitzer Mechanical</option>
      <option>Technical: Fender Electronics or Amp</option>
      <option>Technical: Fender Rhodes (Mechanical)</option>
      <option>Technical: Fender Rhodes (Electronics)</option>
      <option>Technical: Clavinet/Vibanet (Electronics or Preamp)</option>
      <option>Technical: Clavinet/Vibanet (Mechanical)</option>
      <option>Other</option>
    </select>
  </p>
  <p>
    <label>Name:</label>
    <input type="text" id="contactFormName" name="contact[name]" placeholder="Enter your name" />
  </p>
  <p>
    <label>Email:</label>
    <input type="email" id="contactFormEmail" name="contact[email]" placeholder="Enter your email address" />
  </p>
  <p>
    <label>Phone Number:</label>
    <input type="telephone" id="contactFormTelephone" name="contact[phone]" placeholder="Enter the best number to reach you at" />
  </p> 
  <p>
    <label>Message:</label>
    <textarea rows="15" cols="75" id="contactFormMessage" name="contact[body]" placeholder="Add your message here"></textarea>
  </p>
  <p>
    <input type="submit" id="contactFormSubmit" value="SEND" />
  </p>        	
</div><!-- contactWrapper -->

{% endform %}
</div>